<Page x:Class="SecureNovaPC.Views.SecurityView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Security Center" Background="#F5F5F5">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Security Center - Threat Detection" FontSize="24" FontWeight="Bold" Foreground="#1a3a52" Margin="0,0,0,20"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <Button x:Name="QuickScanButton" Click="QuickScanButton_Click" Content="Quick Scan" Width="120" Height="40" Background="#3b7ab8" Foreground="White" FontWeight="Bold" Margin="0,0,10,0"/>
                <Button x:Name="FullScanButton" Click="FullScanButton_Click" Content="Full Scan" Width="120" Height="40" Background="#e74c3c" Foreground="White" FontWeight="Bold" Margin="0,0,10,0"/>
                <Button x:Name="CustomScanButton" Click="CustomScanButton_Click" Content="Custom Scan" Width="120" Height="40" Background="#f39c12" Foreground="White" FontWeight="Bold" Margin="0,0,10,0"/>
                <Button x:Name="QuarantineButton" Click="QuarantineButton_Click" Content="Quarantine" Width="120" Height="40" Background="#95a5a6" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
            <Border Background="White" CornerRadius="5" Padding="15" BorderBrush="#ddd" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Last Scan: 2 hours ago" FontSize="12" Foreground="#666" Margin="0,0,0,10"/>
                    <TextBlock Text="Threats Detected: 0" FontSize="14" FontWeight="Bold" Foreground="#2ecc71"/>
                    <TextBlock Text="System Status: SAFE" FontSize="14" FontWeight="Bold" Foreground="#2ecc71" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>
