<Page x:Class="SecureNovaPC.Views.SettingsView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Settings" Background="#F5F5F5">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Application Settings" FontSize="24" FontWeight="Bold" Foreground="#1a3a52" Margin="0,0,0,20"/>
            <Border Background="White" CornerRadius="5" Padding="20" BorderBrush="#ddd" BorderThickness="1" Margin="0,0,0,20">
                <StackPanel>
                    <CheckBox Content="Enable Auto Scan" FontSize="14" Margin="0,0,0,15" IsChecked="True"/>
                    <CheckBox Content="Enable Real-time Protection" FontSize="14" Margin="0,0,0,15" IsChecked="True"/>
                    <CheckBox Content="Send Notifications" FontSize="14" Margin="0,0,0,15" IsChecked="True"/>
                    <CheckBox Content="Auto Update" FontSize="14" IsChecked="True"/>
                </StackPanel>
            </Border>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="SaveButton" Click="SaveButton_Click" Content="Save Settings" Width="130" Height="40" Background="#2ecc71" Foreground="White" FontWeight="Bold" Margin="0,0,10,0"/>
                <Button x:Name="ResetButton" Click="ResetButton_Click" Content="Reset to Default" Width="140" Height="40" Background="#e74c3c" Foreground="White" FontWeight="Bold" Margin="0,0,10,0"/>
                <Button x:Name="AboutButton" Click="AboutButton_Click" Content="About" Width="100" Height="40" Background="#3b7ab8" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
