<Page x:Class="SecureNovaPC.Views.UninstallerView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="App Uninstaller" Background="#F5F5F5">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Application Uninstaller - Remove Programs" FontSize="24" FontWeight="Bold" Foreground="#1a3a52" Margin="0,0,0,20"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <TextBox Placeholder="Search applications..." Width="300" Height="35" Padding="10" FontSize="12"/>
                <Button Content="Search" Width="100" Height="35" Background="#3b7ab8" Foreground="White" FontWeight="Bold" Margin="10,0,10,0"/>
                <Button x:Name="RefreshButton" Click="RefreshButton_Click" Content="Refresh" Width="100" Height="35" Background="#2ecc71" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
            <Border Background="White" CornerRadius="5" Padding="15" BorderBrush="#ddd" BorderThickness="1" Height="300">
                <ListBox>
                    <ListBoxItem Content="Microsoft Office 2021 - Version 2021.1 - Size: 2.5 GB"/>
                    <ListBoxItem Content="Google Chrome - Version 98.0 - Size: 450 MB"/>
                    <ListBoxItem Content="Adobe Reader - Version 21.1 - Size: 180 MB"/>
                    <ListBoxItem Content="VLC Media Player - Version 3.0 - Size: 90 MB"/>
                </ListBox>
            </Border>
            <Button x:Name="UninstallButton" Click="UninstallButton_Click" Content="Uninstall Selected" Width="150" Height="40" Background="#e74c3c" Foreground="White" FontWeight="Bold" Margin="0,15,0,0"/>
        </StackPanel>
    </Grid>
</Page>
