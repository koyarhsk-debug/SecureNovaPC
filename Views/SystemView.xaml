<Page x:Class="SecureNovaPC.Views.SystemView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="System Monitor" Background="#F5F5F5">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="System Monitor - Performance Metrics" FontSize="24" FontWeight="Bold" Foreground="#1a3a52" Margin="0,0,0,20"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <Border Background="White" CornerRadius="5" Padding="15" Margin="0,0,15,0" Width="200" BorderBrush="#ddd" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="CPU Usage" FontSize="12" Foreground="#666"/>
                        <TextBlock Text="45%" FontSize="18" FontWeight="Bold" Foreground="#3b7ab8"/>
                    </StackPanel>
                </Border>
                <Border Background="White" CornerRadius="5" Padding="15" Margin="0,0,15,0" Width="200" BorderBrush="#ddd" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Memory Usage" FontSize="12" Foreground="#666"/>
                        <TextBlock Text="62%" FontSize="18" FontWeight="Bold" Foreground="#e74c3c"/>
                    </StackPanel>
                </Border>
                <Border Background="White" CornerRadius="5" Padding="15" Margin="0,0,15,0" Width="200" BorderBrush="#ddd" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Disk Usage" FontSize="12" Foreground="#666"/>
                        <TextBlock Text="78%" FontSize="18" FontWeight="Bold" Foreground="#f39c12"/>
                    </StackPanel>
                </Border>
                <Border Background="White" CornerRadius="5" Padding="15" Width="200" BorderBrush="#ddd" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Temperature" FontSize="12" Foreground="#666"/>
                        <TextBlock Text="52Â°C" FontSize="18" FontWeight="Bold" Foreground="#2ecc71"/>
                    </StackPanel>
                </Border>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="RefreshButton" Click="RefreshButton_Click" Content="Refresh" Width="120" Height="40" Background="#3b7ab8" Foreground="White" FontWeight="Bold" Margin="0,0,10,0"/>
                <Button x:Name="OptimizeButton" Click="OptimizeButton_Click" Content="Optimize System" Width="140" Height="40" Background="#2ecc71" Foreground="White" FontWeight="Bold" Margin="0,0,10,0"/>
                <Button x:Name="DetailedButton" Click="DetailedButton_Click" Content="Detailed Report" Width="130" Height="40" Background="#e74c3c" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
