<Page x:Class="SecureNovaPC.Views.DashboardView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Dashboard" Background="{StaticResource LightGrayBrush}">
    <StackPanel Padding="20" Orientation="Vertical">
        <!-- Welcome Section -->
        <StackPanel Background="{StaticResource LightBlueBrush}" Padding="20" CornerRadius="5" Margin="0,0,0,20">
            <TextBlock Text="Welcome Back" Foreground="{StaticResource WhiteBrush}" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="Your system is protected" Foreground="{StaticResource WhiteBrush}" FontSize="14" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- System Performance Cards -->
        <TextBlock Text="SYSTEM PERFORMANCE" Foreground="{StaticResource DarkGrayBrush}" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
        
        <Grid Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Health Score Card -->
            <Border Grid.Column="0" Background="{StaticResource WhiteBrush}" Padding="15" Margin="5" CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="Health Score" Foreground="{StaticResource DarkGrayBrush}" FontSize="12"/>
                    <TextBlock Text="80/100" Foreground="{StaticResource GreenBrush}" FontSize="20" FontWeight="Bold" Margin="0,5,0,0"/>
                    <ProgressBar Background="{StaticResource LightGrayBrush}" Foreground="{StaticResource GreenBrush}" Value="80" Maximum="100" Height="5" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- RAM Card -->
            <Border Grid.Column="1" Background="{StaticResource WhiteBrush}" Padding="15" Margin="5" CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="RAM" Foreground="{StaticResource DarkGrayBrush}" FontSize="12"/>
                    <TextBlock Text="4.2 GB / 8 GB" Foreground="{StaticResource LightBlueBrush}" FontSize="20" FontWeight="Bold" Margin="0,5,0,0"/>
                    <ProgressBar Background="{StaticResource LightGrayBrush}" Foreground="{StaticResource LightBlueBrush}" Value="52.5" Maximum="100" Height="5" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Disk Card -->
            <Border Grid.Column="2" Background="{StaticResource WhiteBrush}" Padding="15" Margin="5" CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="Disk" Foreground="{StaticResource DarkGrayBrush}" FontSize="12"/>
                    <TextBlock Text="512 GB / 900 GB" Foreground="{StaticResource OrangeBrush}" FontSize="20" FontWeight="Bold" Margin="0,5,0,0"/>
                    <ProgressBar Background="{StaticResource LightGrayBrush}" Foreground="{StaticResource OrangeBrush}" Value="56.9" Maximum="100" Height="5" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- CPU Temp Card -->
            <Border Grid.Column="3" Background="{StaticResource WhiteBrush}" Padding="15" Margin="5" CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="CPU Temp" Foreground="{StaticResource DarkGrayBrush}" FontSize="12"/>
                    <TextBlock Text="42Â°C" Foreground="{StaticResource GreenBrush}" FontSize="20" FontWeight="Bold" Margin="0,5,0,0"/>
                    <ProgressBar Background="{StaticResource LightGrayBrush}" Foreground="{StaticResource GreenBrush}" Value="42" Maximum="100" Height="5" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Quick Actions -->
        <TextBlock Text="QUICK ACTIONS" Foreground="{StaticResource DarkGrayBrush}" FontSize="14" FontWeight="Bold" Margin="0,10,0,10"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="{StaticResource WhiteBrush}" Padding="15" Margin="5" CornerRadius="5">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="ðŸ§¹ System Optimize" Foreground="{StaticResource DarkGrayBrush}" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                    <Button Content="Start Scan" Background="{StaticResource GreenBrush}" Foreground="{StaticResource WhiteBrush}" Padding="10"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Background="{StaticResource WhiteBrush}" Padding="15" Margin="5" CornerRadius="5">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="ðŸ”’ Security Scan" Foreground="{StaticResource DarkGrayBrush}" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                    <Button Content="Scan" Background="{StaticResource LightBlueBrush}" Foreground="{StaticResource WhiteBrush}" Padding="10"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Background="{StaticResource WhiteBrush}" Padding="15" Margin="5" CornerRadius="5">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="ðŸ“¦ Uninstall Programs" Foreground="{StaticResource DarkGrayBrush}" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                    <Button Content="Manage" Background="{StaticResource OrangeBrush}" Foreground="{StaticResource WhiteBrush}" Padding="10"/>
                </StackPanel>
            </Border>
        </Grid>
    </StackPanel>
</Page>
